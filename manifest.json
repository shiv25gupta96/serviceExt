{
    "manifest_version": 2,
    "name": "SerEx",
    "version": "0.1",
    "description": "Tagging Users to contact",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "webNavigation", "activeTab", "tabs", "https://*/*"
      ],
    "content_scripts": [{
        "css": ["styles/c_style.css"],
        "js": ["content.js"],
        "matches": ["*://fire.service-now.com/*"]
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "web_accessible_resources": ["scripts/*"]
}